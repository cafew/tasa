{{#if sentiment}}
  <h2>Sentiment Mapping</h2>
{{else}}
  {{#if adjective}}
    <h2>Adjectives</h2>
  {{else}}
    <h2>Top 20 Tweets</h2>
  {{/if}}
{{/if}}


<div class='drilldown-overview'>
  <div class="de-emphasize drilldown-info">{{date}}</div>
  {{#if sentiment}}
    <ul class="drilldown-counts list-inline">
      <li class="positive">Positive: {{positive}}</li>
      <li class="negative">Negative: {{negative}}</li>
      <li class="neutral">Neutral: {{neutral}}</li>
    </ul>

    <ul class="drilldown-breakdown list-inline">
      <li class="positive-proportion" style="width: {{positive_proportion}}%"></li>
      <li class="negative-proportion" style="width: {{negative_proportion}}%"></li>
      <li class="neutral-proportion" style="width: {{neutral_proportion}}%"></li>
    </ul>
  {{/if}}
  <div class="de-emphasize drilldown-info">{{total}} Total Tweets </div>
</div>

{{#if sentiment}}<h3 class="sidebar-subtitle {{sentiment}}">top 20 {{sentiment}} tweets</h3>{{/if}}
{{#if adjective}}<h3 class="sidebar-subtitle {{adjective}}">top 20 {{adjective}} tweets</h3>{{/if}}
<ol>
  {{#tweets}}
    <li class="sidebar-tweet">
      <span class="username">{{username}}</span>
      <p class="text">{{text}}</p>
    </li>
  {{/tweets}}
</ol>